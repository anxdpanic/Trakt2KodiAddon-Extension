{
  "manifest_version": 2,

  "name": "Trakt2KodiAddon",
  "short_name": "Trakt2KodiAddon",
  "description": "Open/Play trakt.tv items in a Kodi Addon",
  "version": "0.0.0.8",
  "default_locale": "en",
  "options_ui": {
    "page": "/html/settings.html"
  },

  "icons": {
    "128": "/images/icon_128.png",
    "48": "/images/icon_48.png",
    "16": "/images/icon_16.png"
  },

  "browser_action": {
    "default_icon": {
      "38": "/images/icon_38.png",
      "19": "/images/icon_19.png"
    },
    "default_popup": "/html/settings.html"
  },

  "web_accessible_resources": [
    "/images/icon_16.png",
    "/images/icon_19.png",
    "/images/icon_38.png",
    "/images/icon_48.png",
    "/images/icon_128.png",
    "/css/settings.css",
    "/css/tabs.css",
    "/css/trakt.css",
    "/js/background.js",
    "/js/content_script.js",
    "/js/i18n.js",
    "/js/settings.js",
    "/html/settings.html"
  ],

  "content_scripts": [
    {
      "matches": [
        "*://trakt.tv/*"
      ],
      "css": [
        "/css/trakt.css"
      ],
      "js": [
        "/js/content_script.js"
      ],
      "all_frames": true
    }
  ],

  "background": {
    "matches": [
      "*://trakt.tv/*"
    ],    
    "scripts": [
      "/js/background.js"
    ]
  },

  "permissions": [
    "*://trakt.tv/*",
    "tabs", 
    "webNavigation",
    "background",
    "activeTab",
    "storage"
  ]
}
